<!DOCTYPE html>
    <html>
        <%- include ('./partials/head.ejs', {page: song.title }) %>
        <%- include ('./partials/nav.ejs') %>

          <div class="card " style="width: 50rem;" >
              <img class="card-img-top" src="<%= song.image %>" alt="Card image cap"/>
              <div class="card-body">
                  <h3 class="card-title">
                      <a href="/songs/<%= song.id %>"><%= song.title %> </a>
                  </h3>
                  <h5><%= song.singer %></h5>
                  <p><%= song.date %></p>
                  <div class="control">
                    <a class="button " href="/songs/<%= song.id %>/edit">Edit Song</a>
                  </div>
                  <form action="/songs/<%= song.id %>?_method=DELETE" method="POST">
                    <input class="btn btn-danger" type="submit" value="	Delete Song"/>                    
                  </form>
              </div>
                  
          </div>
      </body>
    </html>