<!DOCTYPE html>
    <html>
        <%- include ('./partials/head.ejs', {page: 'New'}) %>
        <%- include ('./partials/nav.ejs') %>
        <section class="selector">
            <form action="/songs" method="POST">
                <fieldset>
                    <legend>New song</legend>
                        <div class="form-group">
                          <label for="song-title">Song title</label>
                          <input type="text" placeholder ="Song title" id="title" />
                        </div>

                        <div class="form-group">
                          <label for="singer-name">Singer</label>
                          <input type="text" placeholder="singer" id="singer"/>
                        </div>

                        <div class="form-group">
                          <label for="song-image">Song image</label>
                          <input type="text" placeholder="song image" name="image"/>
                        </div>

                        <div class="form-group">
                          <label for="date">Date of release</label>
                          <input type="text" placeholder="date of release" name="date"/>
                        </div>

                        <div class="control">
                            <button class="button is-info">Create Song</button>
                        </div>
                </fieldset>
            </form>
        </section>
                
    </body>
</html>